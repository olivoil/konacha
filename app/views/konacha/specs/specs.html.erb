<!doctype html>
<html>
  <head>
    <meta http-equiv="content-type" content="text/html;charset=utf-8" />
    <title>Konacha Tests</title>
    <%= stylesheet_link_tag "mocha",   :debug => false %>
    <%= stylesheet_link_tag "konacha", :debug => false %>
    <%= javascript_tag do %>
      window.KonachaMode = "<%= Konacha.mode %>";
      window.KonachaRequireJS = {
          deps: <%= raw dependency_modules %>,
          specs: <%= raw spec_modules(*@specs) %>
      };
    <% end %>
    <%= requirejs_include_tag 'konacha_loader' %>
  </head>
  <body>
    <div id="mocha"></div>
  </body>
</html>
